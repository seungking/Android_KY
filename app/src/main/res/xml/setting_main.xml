<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="기본정보">

        <Preference
            android:key="about_app"
            android:title="어플 정보"
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub"/>

        <Preference
            android:key="how_to_use"
            android:title="사용 방법"
            />

    </PreferenceCategory>

    <PreferenceCategory android:title="OO 설정">

        <Preference
            android:key="screen_mode"
            android:title="화면 모드"
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub"/>


        <Preference
            android:key="info"
            android:title="어플 정보"
            android:summary="1.0"/>

        <Preference
            android:key="instruction"
            android:title="사용법"
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="kiman.androidmd"
            android:targetClass="kiman.androidmd.OnBoardActivity" />
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory android:title="화면 설정">

        <SwitchPreference
            android:key="screen_mode"
            android:title="화면 모드"
            android:switchTextOn="화이트모드 / 선택 시 다크모드"
            android:switchTextOff="다크모드 / 선택 시 화이트모드"
            android:defaultValue="false" />


        <Preference
            android:key="msg_template"
            android:title="메세지 템플릿"
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub"/>

    </PreferenceCategory>


    <PreferenceCategory android:title="알림 설정">
        <SwitchPreference
            android:key="set_notification"
            android:title="알림"
            android:defaultValue="true"
            android:summaryOn="메세지 전송 시 push 알람을 받습니다"
            android:summaryOff="메세지 전송 시 push 알람을 받지 않습니다."/>

        <SwitchPreference
            android:key="set_sound"
            android:title="소리"
            android:defaultValue="true"
            android:dependency="set_notification"/>

        <SwitchPreference
            android:key="set_vibrate"
            android:title="진동"
            android:defaultValue="true"
            android:dependency="set_notification"/>

    </PreferenceCategory>


    <PreferenceCategory android:title="기타 설정">
        <Preference
            android:key="set_logout"
            android:title="로그아웃"
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub"/>


    <PreferenceCategory android:title="메시지 알림 설정">

        <SwitchPreference
            android:key="notification"
            android:title="알림"
            android:summary="예약 카톡 전송이 완료되었을 경우 상태 바에 '전송완료'를 노출할지 결정합니다."
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub"/>

        <Preference
            android:key="sound"
            android:title="소리"
            android:dependency="notification"/>

        <Preference
            android:key="sound_list"
            android:summary="카톡"
            android:title="알림음음"
            android:dependency="notification" />

        <ListPreference
            android:title="언어"
            android:summary="언어설정 입니다."
            android:key="language"
            android:defaultValue="ko"
            android:entries="@array/language"
            android:entryValues="@array/language_value"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:dependency="notification"/>


    </PreferenceCategory>

    <PreferenceCategory android:title="기타 설정">
        <Preference
            android:key="logout"
            android:title="로그아웃"
            app:fragment="com.kakaoyeyak.SettingPreferenceFragmentSub"/>

    </PreferenceCategory>


</PreferenceScreen>