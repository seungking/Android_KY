<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:animationCache="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addmessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/com_kakao_button_background_press"
            android:text="예약 메세지 추가하기"></Button>
        
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_horizontal_ntb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6"
        android:foregroundGravity="center|top"/>

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:ntb_inactive_color="#727272"
        app:ntb_active_color="#727272"
        app:ntb_badge_size="0dp"
        app:ntb_badge_gravity="bottom"
        app:ntb_badge_position="right"
        app:ntb_badged="false"
        app:ntb_bg_color="#FFFFFF"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true" />

</LinearLayout>
